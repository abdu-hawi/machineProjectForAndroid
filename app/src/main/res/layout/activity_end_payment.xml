<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hawi.myapplication.EndPaymentActivity">


    <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_above="@id/btnFinishPayment"
                android:id="@+id/img_code"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_add"/>

        <TextView
                android:layout_above="@id/btnFinishPayment"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:shadowColor="@color/color009fe3"
                android:text="THANK YOU FOR PAYMENT FROM US"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/color009fe3"
                android:textColor="@color/colorWhite"
                android:text="finish"
                android:id="@+id/btnFinishPayment"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
