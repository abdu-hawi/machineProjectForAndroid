<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.hawi.myapplication.ResetPasswordActivity">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/txtAlertReset"/>
    <LinearLayout
            android:id="@+id/llReset"
            android:layout_below="@id/txtAlertReset"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Phone No."
                android:ems="10"
                android:id="@+id/etOneReset"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Confirm New Password"
                android:visibility="gone"
                android:ems="10"
                android:id="@+id/etTowReset"/>
    </LinearLayout>
    <Button
            android:id="@+id/btnCheckPhone"
            android:layout_below="@id/llReset"
            android:layout_marginTop="30dp"
            android:text="Send"
            android:textStyle="bold"
            android:background="@drawable/side_nav_bar"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btnReset"
            android:layout_below="@id/btnCheckPhone"
            android:layout_marginTop="30dp"
            android:text="Save New Password"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@color/color009fe3"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Back To Login"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtBackLoginReset"/>
</RelativeLayout>
